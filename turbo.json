{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".astro/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsconfig*.json"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "tests/**", "vitest.config.*"],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**", "eslint.config.*", ".eslintrc.*"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**", "tsconfig.json", "tsconfig*.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["tsconfig.json", "package-lock.json"],
  "globalEnv": ["NODE_ENV", "CI"]
}
