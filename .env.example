# Skillsmith Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Linear API Key (required for Linear integration)
# Get from: Linear → Settings → Security & access → Personal API keys
LINEAR_API_KEY=lin_api_your_key_here

# Linear Team ID (required for E2E test issue creation)
# Get from: Linear → Settings → Workspace → Copy team ID
LINEAR_TEAM_ID=your-team-uuid-here

# Linear Project IDs (required for Linear scripts)
# Get from: Linear → Project → Settings → Copy project ID
LINEAR_PROJECT_PHASE1=your-phase1-project-uuid
LINEAR_PROJECT_PHASE2=your-phase2-project-uuid
LINEAR_PROJECT_TEAM=your-team-project-uuid

# Node environment
NODE_ENV=development

# =============================================================================
# GOOGLE GEMINI (Logo Generation)
# =============================================================================

# Gemini API Key (https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=AIza_your_key_here

# =============================================================================
# SUPABASE SKILL REGISTRY (Phase 6A)
# Copy these to .env.registry for registry-specific operations
# =============================================================================

# Supabase Project URL (Settings → API → Project URL)
SUPABASE_URL=https://xxxxx.supabase.co

# Supabase Anonymous Key (Settings → API → anon/public)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Service Role Key (Settings → API → service_role) - KEEP SECRET!
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Database URL (Settings → Database → Connection string → URI)
SUPABASE_DB_URL=postgresql://postgres:xxxxx@db.xxxxx.supabase.co:5432/postgres

# =============================================================================
# POSTHOG TELEMETRY (Phase 6A)
# =============================================================================

# PostHog API Key (Project Settings → Project API Key)
POSTHOG_API_KEY=phc_xxxxx

# PostHog Host
POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# STRIPE PAYMENT INTEGRATION
# =============================================================================

# Stripe Publishable Key (client-side, safe to expose)
# Get from: Stripe Dashboard → Developers → API keys → Publishable key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Stripe Secret Key (server-side only, KEEP SECRET!)
# Get from: Stripe Dashboard → Developers → API keys → Secret key
STRIPE_SECRET_KEY=sk_test_your_key_here

# Stripe Webhook Secret (for verifying webhook signatures)
# Get from: Stripe Dashboard → Developers → Webhooks → Signing secret
STRIPE_WEBHOOK_SECRET=whsec_your_secret_here

# =============================================================================
# STRIPE PRICE IDs (for Edge Functions)
# Set in Supabase Edge Function secrets for checkout functionality
# =============================================================================

# Individual tier prices
STRIPE_PRICE_INDIVIDUAL_MONTHLY=price_your_individual_monthly_id
STRIPE_PRICE_INDIVIDUAL_ANNUAL=price_your_individual_annual_id

# Team tier prices
STRIPE_PRICE_TEAM_MONTHLY=price_your_team_monthly_id
STRIPE_PRICE_TEAM_ANNUAL=price_your_team_annual_id

# Enterprise tier prices
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_your_enterprise_monthly_id
STRIPE_PRICE_ENTERPRISE_ANNUAL=price_your_enterprise_annual_id

# App URL (for checkout success/cancel redirects)
APP_URL=https://skillsmith.app

# =============================================================================
# SKILLSMITH FEATURE FLAGS
# =============================================================================

# Disable telemetry (set to false to opt out)
SKILLSMITH_TELEMETRY=true

# Force offline mode (use local database)
SKILLSMITH_OFFLINE_MODE=false
