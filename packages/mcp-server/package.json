{
  "name": "@skillsmith/mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Skillsmith skill discovery",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "skillsmith-mcp": "./dist/index.js"
  },
  "scripts": {
    "prepublishOnly": "npm run build && npm run test",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.config.integration.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@skillsmith/core": "*",
    "esbuild": "0.27.2"
  },
  "devDependencies": {
    "tsx": "^4.6.0",
    "vitest": "4.0.16",
    "zod": "^3.25.0"
  },
  "peerDependencies": {
    "@skillsmith/enterprise": "*"
  },
  "peerDependenciesMeta": {
    "@skillsmith/enterprise": {
      "optional": true
    }
  },
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/smith-horn-group/skillsmith.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/smith-horn-group/skillsmith#readme",
  "bugs": {
    "url": "https://github.com/smith-horn-group/skillsmith/issues"
  },
  "keywords": [
    "claude",
    "ai",
    "skills",
    "mcp",
    "llm",
    "anthropic",
    "model-context-protocol"
  ],
  "engines": {
    "node": ">=22.0.0"
  }
}
