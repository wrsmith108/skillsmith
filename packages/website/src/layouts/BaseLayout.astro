---
/**
 * BaseLayout
 *
 * SMI-2043: Unified navigation with auth-state awareness
 *
 * Shared layout for pages using the standard navigation pattern.
 * Includes Supabase config injection for UserMenu auth state.
 */

import { ViewTransitions } from 'astro:transitions';
import Nav from '../components/Nav.astro';
import { getSupabaseConfig } from '../lib/supabase-config';

interface Props {
  title: string;
  description?: string;
  /** Current page path for nav highlighting */
  activePath?: string;
}

const { title, description = "Skillsmith - AI-powered skill discovery and management for Claude Code", activePath = '' } = Astro.props;

// Get Supabase config for auth-aware navigation
const supabaseConfig = getSupabaseConfig();
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-GGZQZM1Y1L"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-GGZQZM1Y1L');
    </script>
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href="/logo-icon.svg" />
    <title>{title}</title>

    <!-- Slot for page-specific head content (JSON-LD, etc.) -->
    <slot name="head" />

    <!-- Enable smooth page transitions without full reload -->
    <ViewTransitions />

    <!-- Supabase config for auth-aware navigation -->
    <script is:inline define:vars={{ supabaseConfig }}>
      window.__SUPABASE_CONFIG__ = supabaseConfig;
    </script>

    <script is:inline src="https://cdn.tailwindcss.com"></script>
    <script is:inline>
      // @ts-ignore - tailwind is loaded from CDN
      window.tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              primary: {
                50: '#fef7f5',
                100: '#fdeee9',
                200: '#fbd5cc',
                300: '#f5b5a5',
                400: '#ed9580',
                500: '#E07A5F',
                600: '#D4694E',
                700: '#b8573f',
                800: '#994634',
                900: '#7a3829',
              },
              dark: {
                50: '#FAFAFA',
                100: '#f1f5f9',
                200: '#e2e8f0',
                300: '#cbd5e1',
                400: '#94a3b8',
                500: '#64748b',
                600: '#475569',
                700: '#334155',
                800: '#1f1f23',
                900: '#121214',
                950: '#0D0D0F',
              }
            }
          }
        }
      }
    </script>
  </head>
  <body class="bg-dark-950 text-dark-100 min-h-screen antialiased">
    <!-- Skip to main content link for keyboard navigation -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[60] focus:px-4 focus:py-2 focus:bg-primary-500 focus:text-white focus:rounded-lg focus:outline-none">
      Skip to main content
    </a>

    <Nav activePath={activePath} />

    <main id="main-content">
      <slot />
    </main>

    <footer class="border-t border-dark-800 mt-20 py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="flex items-center space-x-2 mb-4 md:mb-0">
            <!-- Neural S Icon -->
            <svg width="24" height="24" viewBox="0 0 64 64" class="flex-shrink-0" aria-hidden="true">
              <g transform="translate(32, 32)">
                <path d="M 10 -18 Q -10 -14, -10 -4 Q -10 4, 10 8 Q 10 16, -10 20"
                      stroke="currentColor" stroke-width="1.5" stroke-opacity="0.3" fill="none" class="text-white"/>
                <circle cx="10" cy="-18" r="5" fill="#E07A5F"/>
                <circle cx="-10" cy="-4" r="5" fill="#E07A5F"/>
                <circle cx="10" cy="8" r="5" fill="#E07A5F"/>
                <circle cx="-10" cy="20" r="5" fill="#E07A5F"/>
              </g>
            </svg>
            <span class="text-lg font-semibold text-white">Skillsmith</span>
          </div>
          <p class="text-dark-500 text-sm">&copy; 2026 Skillsmith. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import url('https://api.fontshare.com/v2/css?f[]=satoshi@300,400,500,700,900&display=swap');

  :root {
    /* Brand Colors - CSS Custom Properties */
    --color-coral-primary: #E07A5F;
    --color-coral-secondary: #D4694E;
    --color-coral-shadow: rgba(224, 122, 95, 0.25);
    --color-background: #0D0D0F;
    --color-surface: #121214;
    --color-text-primary: #FAFAFA;
    --color-text-secondary: #94a3b8;
    --color-border: #1f1f23;
  }

  html {
    font-family: 'Satoshi', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    background-color: #0D0D0F;
    color: #FAFAFA;
  }

  .gradient-text {
    background: linear-gradient(135deg, #E07A5F 0%, #D4694E 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .gradient-coral {
    background: linear-gradient(135deg, var(--color-coral-primary) 0%, var(--color-coral-secondary) 100%);
    box-shadow: 0 4px 14px var(--color-coral-shadow);
  }

  .gradient-coral-subtle {
    background: linear-gradient(135deg, var(--color-coral-primary) 0%, var(--color-coral-secondary) 100%);
  }

  .card-hover {
    transition: all 0.2s ease-in-out;
  }

  .card-hover:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 40px -15px rgba(224, 122, 95, 0.2);
  }

  .search-input:focus {
    box-shadow: 0 0 0 3px rgba(224, 122, 95, 0.3);
  }

  /* Global focus-visible styles for accessibility */
  a:focus-visible,
  button:focus-visible,
  input:focus-visible,
  select:focus-visible,
  textarea:focus-visible,
  [tabindex]:focus-visible {
    outline: 2px solid #E07A5F;
    outline-offset: 2px;
  }

  /* Screen reader only utility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .sr-only:focus,
  .focus\:not-sr-only:focus {
    position: static;
    width: auto;
    height: auto;
    padding: 0;
    margin: 0;
    overflow: visible;
    clip: auto;
    white-space: normal;
  }

  /* Respect user motion preferences */
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }

    .card-hover {
      transition: none;
    }

    .card-hover:hover {
      transform: none;
    }

    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
