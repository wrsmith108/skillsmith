---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Skillsmith - AI-powered skill discovery and management for Claude Code" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-GGZQZM1Y1L"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-GGZQZM1Y1L');
    </script>
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href="/logo-icon.svg" />
    <title>{title}</title>

    <!-- Slot for page-specific head content (JSON-LD, etc.) -->
    <slot name="head" />

    <script is:inline src="https://cdn.tailwindcss.com"></script>
    <script is:inline>
      // @ts-ignore - tailwind is loaded from CDN
      window.tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              primary: {
                50: '#f0f9ff',
                100: '#e0f2fe',
                200: '#bae6fd',
                300: '#7dd3fc',
                400: '#38bdf8',
                500: '#0ea5e9',
                600: '#0284c7',
                700: '#0369a1',
                800: '#075985',
                900: '#0c4a6e',
              },
              dark: {
                50: '#f8fafc',
                100: '#f1f5f9',
                200: '#e2e8f0',
                300: '#cbd5e1',
                400: '#94a3b8',
                500: '#64748b',
                600: '#475569',
                700: '#334155',
                800: '#1e293b',
                900: '#0f172a',
                950: '#020617',
              }
            }
          }
        }
      }
    </script>
  </head>
  <body class="bg-dark-950 text-dark-100 min-h-screen antialiased">
    <nav class="border-b border-dark-800 bg-dark-900/80 backdrop-blur-sm sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="flex items-center space-x-2">
            <!-- Neural S Icon -->
            <svg width="32" height="32" viewBox="0 0 64 64" class="flex-shrink-0">
              <rect width="64" height="64" fill="transparent" rx="8"/>
              <g transform="translate(32, 32)">
                <path d="M 10 -18 Q -10 -14, -10 -4 Q -10 4, 10 8 Q 10 16, -10 20"
                      stroke="currentColor" stroke-width="1.5" stroke-opacity="0.3" fill="none" class="text-white"/>
                <circle cx="10" cy="-18" r="5" fill="#E07A5F"/>
                <circle cx="-10" cy="-4" r="5" fill="#E07A5F"/>
                <circle cx="10" cy="8" r="5" fill="#E07A5F"/>
                <circle cx="-10" cy="20" r="5" fill="#E07A5F"/>
              </g>
            </svg>
            <span class="text-xl font-bold text-white">Skillsmith</span>
          </a>
          <div class="flex items-center space-x-6">
            <a href="/skills" class="text-dark-300 hover:text-white transition-colors">Skills</a>
            <a href="/docs" class="text-dark-300 hover:text-white transition-colors">Docs</a>
            <a href="/pricing" class="text-dark-300 hover:text-white transition-colors">Pricing</a>
            <a href="https://github.com/Smith-Horn-Group/skillsmith" class="text-dark-300 hover:text-white transition-colors" target="_blank" rel="noopener noreferrer">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.115 2.504.337 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="border-t border-dark-800 mt-20 py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="flex items-center space-x-2 mb-4 md:mb-0">
            <!-- Neural S Icon -->
            <svg width="24" height="24" viewBox="0 0 64 64" class="flex-shrink-0">
              <g transform="translate(32, 32)">
                <path d="M 10 -18 Q -10 -14, -10 -4 Q -10 4, 10 8 Q 10 16, -10 20"
                      stroke="currentColor" stroke-width="1.5" stroke-opacity="0.3" fill="none" class="text-white"/>
                <circle cx="10" cy="-18" r="5" fill="#E07A5F"/>
                <circle cx="-10" cy="-4" r="5" fill="#E07A5F"/>
                <circle cx="10" cy="8" r="5" fill="#E07A5F"/>
                <circle cx="-10" cy="20" r="5" fill="#E07A5F"/>
              </g>
            </svg>
            <span class="text-lg font-semibold text-white">Skillsmith</span>
          </div>
          <p class="text-dark-500 text-sm">&copy; 2026 Skillsmith. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

  html {
    font-family: 'Inter', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
  }

  .gradient-text {
    background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .card-hover {
    transition: all 0.2s ease-in-out;
  }

  .card-hover:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 40px -15px rgba(14, 165, 233, 0.2);
  }

  .search-input:focus {
    box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.3);
  }
</style>
