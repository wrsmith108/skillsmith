---
import BaseLayout from './BaseLayout.astro';
import DocsSidebar from '../components/DocsSidebar.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Skillsmith Documentation' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<BaseLayout title={`${title} | Skillsmith Docs`} description={description}>
  <!-- Pass through head slot content -->
  <slot name="head" slot="head" />

  <div class="flex min-h-[calc(100vh-4rem)]">
    <!-- Sidebar -->
    <DocsSidebar currentPath={currentPath} />

    <!-- Main Content -->
    <main class="flex-1 min-w-0 px-8 py-10 lg:px-12">
      <article class="docs-content max-w-3xl">
        <slot />
      </article>
    </main>

    <!-- Table of Contents -->
    <aside class="hidden xl:block w-56 shrink-0 py-10 pr-8">
      <div class="sticky top-24">
        <h4 class="text-xs font-semibold uppercase tracking-wider text-dark-500 mb-4">On this page</h4>
        <nav class="toc-nav" id="toc">
          <!-- Generated by JavaScript -->
        </nav>
      </div>
    </aside>
  </div>

  <script>
    // Generate table of contents from headings
    document.addEventListener('DOMContentLoaded', () => {
      const article = document.querySelector('.docs-content');
      const toc = document.getElementById('toc');

      if (!article || !toc) return;

      const headings = article.querySelectorAll('h2, h3');
      if (headings.length === 0) return;

      const ul = document.createElement('ul');
      ul.className = 'space-y-2';

      headings.forEach((heading, index) => {
        if (!heading.id) {
          heading.id = `heading-${index}`;
        }

        const li = document.createElement('li');
        li.className = heading.tagName === 'H3' ? 'pl-3' : '';

        const a = document.createElement('a');
        a.href = `#${heading.id}`;
        a.className = 'text-sm text-dark-400 hover:text-primary-400 transition-colors block py-1';
        a.textContent = heading.textContent;

        li.appendChild(a);
        ul.appendChild(li);
      });

      toc.appendChild(ul);
    });
  </script>
</BaseLayout>

<style is:global>
  /* Documentation Content Styles - Plain CSS for Tailwind CDN compatibility */
  .docs-content h1 {
    font-size: 1.875rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }
  @media (min-width: 1024px) {
    .docs-content h1 {
      font-size: 2.25rem;
    }
  }

  .docs-content .lead {
    font-size: 1.125rem;
    color: #cbd5e1;
    margin-bottom: 2rem;
  }

  .docs-content h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid #1e293b;
  }
  @media (min-width: 1024px) {
    .docs-content h2 {
      font-size: 1.5rem;
    }
  }

  .docs-content h2:first-of-type {
    border-top: none;
    padding-top: 0;
  }

  .docs-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: white;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .docs-content h4 {
    font-size: 1rem;
    font-weight: 600;
    color: #e2e8f0;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }

  .docs-content p {
    color: #cbd5e1;
    line-height: 1.625;
    margin-bottom: 1rem;
  }

  .docs-content ul,
  .docs-content ol {
    color: #cbd5e1;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .docs-content ul {
    list-style-type: disc;
  }

  .docs-content ol {
    list-style-type: decimal;
  }

  .docs-content li {
    line-height: 1.625;
    margin-bottom: 0.5rem;
  }

  .docs-content a {
    color: #38bdf8;
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  .docs-content a:hover {
    color: #7dd3fc;
  }

  .docs-content code {
    font-family: ui-monospace, monospace;
    font-size: 0.875rem;
    background-color: #1e293b;
    color: #7dd3fc;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
  }

  .docs-content pre {
    background-color: #0f172a;
    border: 1px solid #1e293b;
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
    overflow-x: auto;
  }

  .docs-content pre code {
    background-color: transparent;
    padding: 0;
    color: #e2e8f0;
  }

  .docs-content strong {
    color: #f1f5f9;
    font-weight: 600;
  }

  .docs-content table {
    width: 100%;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    border-collapse: collapse;
  }

  .docs-content th {
    text-align: left;
    font-weight: 600;
    color: #e2e8f0;
    background-color: #0f172a;
    padding: 0.75rem 1rem;
    border: 1px solid #1e293b;
  }

  .docs-content td {
    color: #cbd5e1;
    padding: 0.75rem 1rem;
    border: 1px solid #1e293b;
  }

  .docs-content .callout {
    background-color: #0f172a;
    border-left: 4px solid #0ea5e9;
    padding: 1rem 1.25rem;
    border-radius: 0 0.5rem 0.5rem 0;
    margin-bottom: 1.5rem;
  }

  .docs-content .callout.warning {
    border-left-color: #f59e0b;
  }

  .docs-content .callout h4 {
    color: #38bdf8;
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .docs-content .callout.warning h4 {
    color: #fbbf24;
  }

  .docs-content .callout p {
    margin-bottom: 0;
  }

  .docs-content .card-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin: 1.5rem 0;
  }
  @media (min-width: 768px) {
    .docs-content .card-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .docs-content .doc-card {
    display: block;
    padding: 1.25rem;
    background-color: #0f172a;
    border: 1px solid #1e293b;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
  }
  .docs-content .doc-card:hover {
    border-color: rgba(14, 165, 233, 0.5);
    box-shadow: 0 10px 15px -3px rgba(14, 165, 233, 0.1);
  }

  .docs-content .doc-card h3 {
    color: white;
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .docs-content .doc-card p {
    color: #94a3b8;
    margin-bottom: 0;
    font-size: 0.875rem;
  }
</style>
