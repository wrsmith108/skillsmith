import BaseLayout from '../layouts/BaseLayout.astro';

const lastUpdated = 'January 17, 2026';
const effectiveDate = 'January 17, 2026';
---

<BaseLayout title="Terms of Service | Skillsmith" description="Terms of Service for Skillsmith - Read our terms and conditions for using the service.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-white mb-4">Terms of Service</h1>
      <p class="text-dark-400">Effective date: {effectiveDate}</p>
      <p class="text-dark-400">Last updated: {lastUpdated}</p>
