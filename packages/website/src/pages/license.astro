    <!-- Quick Summary -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-white mb-6">Quick Summary</h2>

      <div class="grid md:grid-cols-2 gap-6">
        <!-- Permitted -->
        <div class="bg-green-900/20 border border-green-700/50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-green-400 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Permitted
          </h3>
          <ul class="space-y-3 text-dark-300">
            <li class="flex items-start gap-2">
              <span class="text-green-400 mt-1">✓</span>
