---
/**
 * Billing History Page
 *
 * SMI-1166: Billing history and invoice download
 * SMI-2043: Unified navigation with auth-state awareness
 *
 * Shows:
 * - Current subscription details
 * - Invoice history
 * - Download links for past invoices
 * - Payment method management
 */

// Disable prerendering - this page needs SSR to inject Supabase config for auth nav
export const prerender = false;

import { ViewTransitions } from 'astro:transitions';
import Nav from '../../components/Nav.astro';
import { getSupabaseConfig } from '../../lib/supabase-config';

// Read env vars at SSR time to inject into client script
const supabaseConfig = getSupabaseConfig();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/logo-icon.svg" />

    <meta name="description" content="View your Skillsmith billing history and download invoices" />
    <title>Billing History | Skillsmith</title>
    <link rel="preconnect" href="https://api.fontshare.com" crossorigin />
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@300,400,500,700,900&display=swap" rel="stylesheet" />
    <script is:inline define:vars={{ supabaseConfig }}>
      window.__SUPABASE_CONFIG__ = supabaseConfig;
    </script>
    <!-- Enable smooth page transitions without full reload (SMI-2066) -->
    <ViewTransitions />
  </head>
  <body>
    <Nav activePath="/account/billing" />

    <main class="billing-container">
      <!-- Loading State -->
      <div id="loading-state" class="loading-state">
        <div class="spinner-container">
          <svg class="spinner" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none" opacity="0.25"/>
            <path d="M12 2a10 10 0 0 1 10 10" stroke="currentColor" stroke-width="4" fill="none"/>
          </svg>
        </div>
        <p>Loading billing history...</p>
      </div>

      <!-- Error State -->
      <div id="error-state" class="error-state" style="display: none;">
        <div class="error-content">
          <svg class="error-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <h3>Failed to load billing data</h3>
          <p id="error-message">Something went wrong</p>
          <button onclick="location.reload()" class="btn btn-primary">Try Again</button>
        </div>
      </div>

      <!-- Content -->
      <div id="billing-content" style="display: none;">
        <h1>Billing History</h1>

        <!-- Current Subscription Summary -->
        <section class="section">
          <h2>Current Subscription</h2>
          <div class="subscription-summary" id="subscription-summary">
            <div class="summary-item">
              <span class="label">Plan</span>
              <span class="value" id="current-plan">Community</span>
            </div>
            <div class="summary-item">
              <span class="label">Status</span>
              <span class="status-badge" id="subscription-status">Active</span>
            </div>
            <div class="summary-item">
              <span class="label">Next Payment</span>
              <span class="value" id="next-payment">-</span>
            </div>
            <div class="summary-item">
              <span class="label">Amount</span>
              <span class="value" id="payment-amount">Free</span>
            </div>
          </div>
        </section>

        <!-- Payment Method -->
        <section class="section">
          <div class="section-header">
            <h2>Payment Method</h2>
            <button class="btn btn-secondary btn-sm" id="manage-payment-btn">Manage</button>
          </div>
          <div class="payment-method" id="payment-method">
            <div class="no-payment">
              <p>No payment method on file</p>
              <p class="text-muted">Add a payment method to upgrade to a paid plan.</p>
            </div>
          </div>
        </section>

        <!-- Invoice History -->
        <section class="section">
          <h2>Invoice History</h2>
          <div class="invoices-list" id="invoices-list">
            <div class="empty-state">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              <p>No invoices yet</p>
              <p class="text-muted">Invoices will appear here once you have an active subscription.</p>
            </div>
          </div>
        </section>

        <!-- Billing Contact -->
        <section class="section">
          <h2>Billing Contact</h2>
          <div class="billing-contact" id="billing-contact">
            <p class="text-muted">Invoices are sent to your account email.</p>
            <p id="billing-email">-</p>
          </div>
        </section>
      </div>
    </main>

    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2026 Smith Horn Group Ltd. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: 'Satoshi', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: #FAFAFA;
    background: #0D0D0F;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .header {
    background: rgba(13, 13, 15, 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid #1f1f23;
  }

  .nav {
    max-width: 1024px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.25rem;
    color: #FAFAFA;
  }

  .nav-links a {
    text-decoration: none;
    color: #9ca3af;
    font-weight: 500;
  }

  .nav-links a:hover {
    color: #E07A5F;
  }

  .billing-container {
    flex: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    width: 100%;
  }

  .billing-container h1 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .loading-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    color: #9ca3af;
  }

  .spinner-container {
    margin-bottom: 1rem;
  }

  .spinner {
    width: 2.5rem;
    height: 2.5rem;
    color: #E07A5F;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Error State */
  .error-state {
    text-align: center;
    padding: 3rem 1rem;
  }

  .error-content {
    max-width: 400px;
    margin: 0 auto;
  }

  .error-icon {
    width: 4rem;
    height: 4rem;
    color: #ef4444;
    margin: 0 auto 1rem;
  }

  .error-state h3 {
    color: #FAFAFA;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .error-state p {
    color: #9ca3af;
    margin-bottom: 1.5rem;
  }

  .section {
    background: #121214;
    border: 1px solid #2a2a2f;
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .section h2 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .section-header h2 {
    margin-bottom: 0;
  }

  /* Subscription Summary */
  .subscription-summary {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .summary-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .summary-item .label {
    font-size: 0.875rem;
    color: #9ca3af;
  }

  .summary-item .value {
    font-weight: 600;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    width: fit-content;
  }

  .status-badge.active {
    background: rgba(16, 185, 129, 0.2);
    color: #34d399;
  }

  .status-badge.past_due {
    background: rgba(251, 191, 36, 0.2);
    color: #fbbf24;
  }

  .status-badge.canceled {
    background: rgba(239, 68, 68, 0.2);
    color: #f87171;
  }

  /* Payment Method */
  .payment-method {
    padding: 1rem;
    background: #1a1a1f;
    border-radius: 0.5rem;
  }

  .card-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .card-icon {
    width: 40px;
    height: 28px;
    background: #2a2a2f;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #9ca3af;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .card-details .card-number {
    font-weight: 500;
  }

  .card-details .card-expiry {
    font-size: 0.875rem;
    color: #9ca3af;
  }

  .no-payment {
    text-align: center;
    padding: 1rem;
  }

  /* Invoices List */
  .invoices-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .invoice-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: #1a1a1f;
    border-radius: 0.5rem;
  }

  .invoice-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .invoice-date {
    font-weight: 500;
  }

  .invoice-amount {
    font-size: 0.875rem;
    color: #9ca3af;
  }

  .invoice-status {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  .invoice-status.paid {
    background: rgba(16, 185, 129, 0.1);
    color: #34d399;
  }

  .invoice-actions {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .empty-state {
    text-align: center;
    padding: 2rem;
    color: #9ca3af;
  }

  .empty-state svg {
    width: 3rem;
    height: 3rem;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  .text-muted {
    color: #6b7280;
    font-size: 0.875rem;
  }

  /* Billing Contact */
  .billing-contact {
    padding: 1rem;
    background: #1a1a1f;
    border-radius: 0.5rem;
  }

  .billing-contact p {
    margin-bottom: 0.25rem;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
  }

  .btn-sm {
    padding: 0.375rem 0.75rem;
    font-size: 0.8125rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #E07A5F 0%, #D4694E 100%);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(224, 122, 95, 0.4);
  }

  .btn-secondary {
    background: transparent;
    border: 1px solid #2a2a2f;
    color: #FAFAFA;
  }

  .btn-secondary:hover {
    border-color: #E07A5F;
    color: #E07A5F;
  }

  .btn-ghost {
    background: transparent;
    color: #9ca3af;
  }

  .btn-ghost:hover {
    color: #E07A5F;
  }

  .footer {
    margin-top: auto;
    background: #1a1a2e;
    padding: 1.5rem 2rem;
  }

  .footer-content {
    max-width: 1024px;
    margin: 0 auto;
    text-align: center;
    font-size: 0.875rem;
    color: #9ca3af;
  }

  @media (max-width: 768px) {
    .billing-container {
      padding: 1.5rem 1rem;
    }

    .subscription-summary {
      grid-template-columns: 1fr;
    }

    .invoice-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
  }
</style>

<script>
  import { createClient } from '@supabase/supabase-js'

  // Get config from SSR-injected window global (consistent with other auth pages)
  const config = (window as unknown as { __SUPABASE_CONFIG__?: { url: string; anonKey: string } }).__SUPABASE_CONFIG__ || { url: '', anonKey: '' }
  const supabaseUrl = config.url
  const supabaseAnonKey = config.anonKey

  // Escape HTML to prevent XSS
  function escapeHtml(text: string): string {
    const div = document.createElement('div')
    div.textContent = text
    return div.innerHTML
  }

  document.addEventListener('DOMContentLoaded', async () => {
    const loadingState = document.getElementById('loading-state') as HTMLDivElement
    const content = document.getElementById('billing-content') as HTMLDivElement
    const errorState = document.getElementById('error-state') as HTMLDivElement
    const errorMessage = document.getElementById('error-message') as HTMLParagraphElement

    // State management function for consistent UI transitions
    function showState(state: 'loading' | 'content' | 'error') {
      loadingState.style.display = 'none'
      content.style.display = 'none'
      errorState.style.display = 'none'

      if (state === 'loading') loadingState.style.display = 'flex'
      if (state === 'content') content.style.display = 'block'
      if (state === 'error') errorState.style.display = 'block'
    }

    if (!supabaseUrl || !supabaseAnonKey) {
      errorMessage.textContent = 'Configuration error. Please try again later.'
      showState('error')
      return
    }

    const supabase = createClient(supabaseUrl, supabaseAnonKey)

    // Check auth
    const { data: { session } } = await supabase.auth.getSession()
    if (!session) {
      window.location.href = '/login?redirect=/account/billing'
      return
    }

    try {
      // Get profile and subscription
      const { data: profile } = await supabase
        .from('profiles')
        .select('tier, email')
        .eq('id', session.user.id)
        .single()

      const { data: subscriptions } = await supabase
        .rpc('get_user_subscription', { user_uuid: session.user.id })

      const tier = profile?.tier || 'community'
      const subscription = subscriptions?.[0]

      // Update UI
      const currentPlan = document.getElementById('current-plan') as HTMLSpanElement
      const subscriptionStatus = document.getElementById('subscription-status') as HTMLSpanElement
      const nextPayment = document.getElementById('next-payment') as HTMLSpanElement
      const paymentAmount = document.getElementById('payment-amount') as HTMLSpanElement
      const billingEmail = document.getElementById('billing-email') as HTMLParagraphElement

      currentPlan.textContent = tier.charAt(0).toUpperCase() + tier.slice(1)
      billingEmail.textContent = session.user.email || profile?.email || '-'

      if (subscription) {
        subscriptionStatus.textContent = subscription.status.charAt(0).toUpperCase() + subscription.status.slice(1)
        subscriptionStatus.className = `status-badge ${subscription.status}`

        const periodEnd = new Date(subscription.current_period_end)
        nextPayment.textContent = periodEnd.toLocaleDateString()

        const prices: Record<string, string> = {
          individual: '$9.99',
          team: `$${25 * (subscription.seat_count || 1)}`,
          enterprise: `$${55 * (subscription.seat_count || 1)}`
        }
        paymentAmount.textContent = prices[tier] || 'Free'

        // Show payment method if we have one stored
        const paymentMethod = document.getElementById('payment-method') as HTMLDivElement
        // Note: Card details are managed via Stripe portal
        paymentMethod.innerHTML = `
          <div class="card-info">
            <div class="card-icon">CARD</div>
            <div class="card-details">
              <div class="card-number">•••• •••• •••• ••••</div>
              <div class="card-expiry">Click "Manage" to update payment method</div>
            </div>
          </div>
        `

        // Fetch invoices from Stripe via Edge Function
        const invoicesList = document.getElementById('invoices-list') as HTMLDivElement
        try {
          const invoicesRes = await fetch(
            `${supabaseUrl}/functions/v1/list-invoices?limit=12`,
            {
              method: 'GET',
              headers: {
                'Authorization': `Bearer ${session.access_token}`,
              },
            }
          )

          if (invoicesRes.ok) {
            const { invoices } = await invoicesRes.json()

            if (invoices && invoices.length > 0) {
              invoicesList.innerHTML = invoices.map((invoice: {
                id: string
                number: string | null
                status: string
                amount: number
                currency: string
                date: string
                pdfUrl: string | null
              }) => {
                const date = new Date(invoice.date).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })
                const amount = `$${invoice.amount.toFixed(2)}`
                const statusClass = invoice.status === 'paid' ? 'paid' : ''
                const statusText = invoice.status.charAt(0).toUpperCase() + invoice.status.slice(1)
                const invoiceNumber = invoice.number || invoice.id.slice(-8).toUpperCase()
                const downloadButton = invoice.pdfUrl
                  ? `<a href="${escapeHtml(invoice.pdfUrl)}" target="_blank" rel="noopener" class="btn btn-ghost btn-sm">Download</a>`
                  : `<span class="btn btn-ghost btn-sm" style="opacity: 0.5; cursor: not-allowed;">Generating...</span>`

                return `
                  <div class="invoice-item">
                    <div class="invoice-info">
                      <span class="invoice-date">${escapeHtml(date)} <span class="text-muted">(#${escapeHtml(invoiceNumber)})</span></span>
                      <span class="invoice-amount">${escapeHtml(amount)} ${escapeHtml(invoice.currency)}</span>
                    </div>
                    <div class="invoice-actions">
                      <span class="invoice-status ${statusClass}">${escapeHtml(statusText)}</span>
                      ${downloadButton}
                    </div>
                  </div>
                `
              }).join('')
            }
          }
        } catch (invoiceErr) {
          console.error('Failed to fetch invoices:', invoiceErr)
          // Keep the empty state if invoices fail to load
        }
      } else {
        subscriptionStatus.textContent = 'Free'
        subscriptionStatus.className = 'status-badge active'
        nextPayment.textContent = '-'
        paymentAmount.textContent = 'Free'
      }

      // Manage payment button - redirect to Stripe portal
      const managePaymentBtn = document.getElementById('manage-payment-btn') as HTMLButtonElement
      managePaymentBtn.addEventListener('click', async () => {
        managePaymentBtn.disabled = true
        managePaymentBtn.textContent = 'Loading...'

        try {
          const res = await fetch(
            `${supabaseUrl}/functions/v1/create-portal-session`,
            {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${session.access_token}`,
              },
              body: JSON.stringify({ returnUrl: window.location.href }),
            }
          )

          if (!res.ok) {
            const err = await res.json()
            throw new Error(err.error || 'Failed to create portal session')
          }

          const { url } = await res.json()
          window.location.href = url
        } catch (error) {
          console.error('Portal error:', error)
          alert(error instanceof Error ? error.message : 'Failed to open billing portal')
          managePaymentBtn.disabled = false
          managePaymentBtn.textContent = 'Manage'
        }
      })

      // Show content
      showState('content')

    } catch (error) {
      console.error('Failed to load billing data:', error)
      errorMessage.textContent = error instanceof Error ? error.message : 'Please try again'
      showState('error')
    }
  })
</script>
