            <circle cx="-10" cy="-4" r="5" fill="#E07A5F"/>
            <circle cx="10" cy="8" r="5" fill="#E07A5F"/>
            <circle cx="-10" cy="20" r="5" fill="#E07A5F"/>
          </g>
        </svg>
        <span class="text-xl font-bold tracking-tight">skillsmith</span>
      </a>

      <!-- Nav Links -->
      <div class="flex items-center gap-6">
        <a href="/docs/api" class="text-[#A1A1AA] hover:text-[#E07A5F] transition-colors text-sm font-medium">
          API Docs
        </a>
        <a href="#early-access-hero" class="px-4 py-2 border border-white/10 rounded-xl text-sm font-medium hover:border-white/20 transition-colors">
          Get Early Access
        </a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center pt-[72px]">
    <div class="max-w-[800px] mx-auto px-6 py-24 text-center">
      <!-- Headline -->
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-black tracking-tight leading-[1.1] mb-6 opacity-0 animate-fade-up" style="animation-delay: 0.1s;">
        Save Hours Finding<br />the Right Skills.
      </h1>

      <!-- Subheadline -->
      <p class="text-lg sm:text-xl text-[#A1A1AA] max-w-[600px] mx-auto mb-10 opacity-0 animate-fade-up" style="animation-delay: 0.2s;">
        <span id="skill-count">14,000+</span> curated Claude Code skills. Finally searchable.<br />
        Get stack-aware recommendations before anyone else.
      </p>

      <!-- Email Capture Form -->
      <form id="early-access-hero" class="max-w-[500px] mx-auto mb-4 opacity-0 animate-fade-up" style="animation-delay: 0.3s;">
        <!-- Honeypot field for bot detection (hidden from humans) -->
        <input type="text" name="website" autocomplete="off" tabindex="-1" class="absolute -left-[9999px] opacity-0 h-0 w-0" aria-hidden="true" />
        <div class="flex flex-col sm:flex-row gap-3">
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            required
            aria-label="Email address for early access"
            class="flex-1 px-5 py-4 bg-[#18181B] border border-white/10 rounded-xl text-base placeholder:text-[#71717A] focus:outline-none focus:border-[#E07A5F] focus:ring-1 focus:ring-[#E07A5F]/20 transition-colors"
          />
          <button
            type="submit"
            class="px-8 py-4 bg-gradient-to-br from-[#E07A5F] to-[#D4694E] rounded-xl font-bold text-white shadow-cta hover:scale-[1.02] hover:shadow-[0_12px_40px_rgba(224,122,95,0.3)] active:scale-[0.98] transition-all disabled:opacity-50 disabled:cursor-not-allowed"
