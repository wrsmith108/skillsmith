  <!-- Final CTA Section -->
  <section class="py-24 relative">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#E07A5F]/[0.03] to-transparent"></div>
    <div class="relative max-w-[600px] mx-auto px-6 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">
        Get early access now
      </h2>
      <p class="text-lg text-[#A1A1AA] mb-10">
        Be first to discover skills that fit your workflow.
      </p>

      <!-- Email Capture (CTA) -->
      <form id="early-access-cta" class="max-w-[500px] mx-auto mb-4">
        <!-- Honeypot field for bot detection (hidden from humans) -->
        <input type="text" name="website" autocomplete="off" tabindex="-1" class="absolute -left-[9999px] opacity-0 h-0 w-0" aria-hidden="true" />
        <div class="flex flex-col sm:flex-row gap-3">
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
