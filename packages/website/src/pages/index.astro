  <!-- Fetch live skill count -->
  <script define:vars={{ statsApiUrl: `${import.meta.env.PUBLIC_API_BASE_URL || 'https://api.skillsmith.app'}/functions/v1/stats` }}>
    (function() {
      const API_URL = statsApiUrl;
      const CACHE_KEY = 'skillsmith_skill_count';
      const CACHE_TTL = 5 * 60 * 1000; // 5 minutes

      function formatNumber(num) {
        return num.toLocaleString('en-US');
      }

      function updateCount(count) {
        const el = document.getElementById('skill-count');
        const elFeature = document.getElementById('skill-count-feature');
        const elInstall = document.getElementById('skill-count-install');
        if (count > 0) {
          const formattedCount = formatNumber(count) + '+';
          if (el) el.textContent = formattedCount;
          if (elFeature) elFeature.textContent = formattedCount;
          if (elInstall) elInstall.textContent = formattedCount;
        }
      }

      // Check localStorage cache first
      try {
        const cached = localStorage.getItem(CACHE_KEY);
        if (cached) {
          const { count, timestamp } = JSON.parse(cached);
          if (Date.now() - timestamp < CACHE_TTL) {
            updateCount(count);
          }
        }
      } catch (e) {}

      // Fetch fresh count
      fetch(API_URL)
        .then(res => res.json())
        .then(data => {
          if (data.data && data.data.skillCount) {
            const count = data.data.skillCount;
            updateCount(count);
            // Cache for next visit
            try {
              localStorage.setItem(CACHE_KEY, JSON.stringify({
                count,
                timestamp: Date.now()
              }));
            } catch (e) {}
          }
        })
        .catch(() => {
          // Keep default value on error
        });
    })();
  </script>

  <!-- Early Access Form Handler -->
  <script define:vars={{ signupApiUrl: `${import.meta.env.PUBLIC_API_BASE_URL || 'https://api.skillsmith.app'}/functions/v1/early-access-signup` }}>
    (function() {
      const API_URL = signupApiUrl;

      // Get UTM parameters from URL
      function getUtmParams() {
        const params = new URLSearchParams(window.location.search);
        return {
          utm_source: params.get('utm_source') || undefined,
          utm_medium: params.get('utm_medium') || undefined,
          utm_campaign: params.get('utm_campaign') || undefined,
        };
      }

      // Show status message
      function showStatus(statusEl, message, isError) {
        statusEl.textContent = message;
        statusEl.className = statusEl.className.replace(/text-\[\#[A-Fa-f0-9]+\]/g, '');
        statusEl.classList.add(isError ? 'text-[#EF4444]' : 'text-[#81B29A]');
        statusEl.style.opacity = '1';
      }

      // Handle form submission
      async function handleSubmit(e, source) {
        e.preventDefault();

        const form = e.target;
        const button = form.querySelector('button[type="submit"]');
        const emailInput = form.querySelector('input[name="email"]');
        const honeypotInput = form.querySelector('input[name="website"]');
        const statusEl = document.getElementById(form.id + '-status');

        // Honeypot check - if filled, silently "succeed" (bot detected)
        if (honeypotInput && honeypotInput.value) {
          showStatus(statusEl, "You're on the list! Check your email for confirmation.", false);
          emailInput.value = '';
          return;
        }

        const email = emailInput.value.trim();
        if (!email) return;

        // Disable button and show loading state
        const originalText = button.textContent;
        button.disabled = true;
        button.textContent = 'Joining...';
        statusEl.textContent = '';
        statusEl.style.opacity = '0';

        try {
          const utmParams = getUtmParams();

          const response = await fetch(API_URL, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              email,
              source,
              ...utmParams,
            }),
          });

          const data = await response.json();

          if (response.ok && data.success) {
            showStatus(statusEl, data.message, false);
            emailInput.value = '';
            // Track conversion in GA
            if (typeof gtag === 'function') {
              gtag('event', 'sign_up', {
                method: 'early_access',
                source: source,
              });
            }
          } else {
            showStatus(statusEl, data.error || 'Something went wrong. Please try again.', true);
          }
        } catch (err) {
          console.error('Signup error:', err);
          showStatus(statusEl, 'Network error. Please try again.', true);
        } finally {
          button.disabled = false;
          button.textContent = originalText;
        }
      }

      // Attach event listeners
      const heroForm = document.getElementById('early-access-hero');
      const ctaForm = document.getElementById('early-access-cta');

      if (heroForm) {
        heroForm.addEventListener('submit', (e) => handleSubmit(e, 'homepage_hero'));
      }
      if (ctaForm) {
        ctaForm.addEventListener('submit', (e) => handleSubmit(e, 'homepage_cta'));
      }
    })();
  </script>
