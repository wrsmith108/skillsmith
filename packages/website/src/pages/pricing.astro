interface PricingTier {
  name: string;
  monthlyPrice: number;  // Price in dollars (0 for free)
  period?: string;
  description: string;
  apiCalls: string;
  features: string[];
  cta: string;
  ctaHref: string;
  highlighted?: boolean;
}

// Annual pricing: Pay for 10 months, get 12 (17% savings)
const ANNUAL_DISCOUNT_MONTHS = 10;

function formatPrice(price: number): string {
  if (price === 0) return "Free";
  return `$${price}`;
}

function getAnnualPrice(monthlyPrice: number): number {
  return monthlyPrice * ANNUAL_DISCOUNT_MONTHS;
}

