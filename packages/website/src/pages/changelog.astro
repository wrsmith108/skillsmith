---
/**
 * Skillsmith Changelog Page
 * Release notes and version history
 *
 * SMI-2071: Fetches releases from GitHub API at build time
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { getChangelogEntries, type ChangelogEntry } from '../lib/github-releases';

// Fetch changelog from GitHub releases (runs at build time)
const changelog: ChangelogEntry[] = await getChangelogEntries();

// Helper to get badge color for change type
function getBadgeClass(type: string): string {
  switch (type) {
    case 'added': return 'bg-green-500/20 text-green-400 border-green-500/30';
    case 'changed': return 'bg-blue-500/20 text-blue-400 border-blue-500/30';
    case 'fixed': return 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30';
    case 'deprecated': return 'bg-orange-500/20 text-orange-400 border-orange-500/30';
    case 'removed': return 'bg-red-500/20 text-red-400 border-red-500/30';
    case 'security': return 'bg-purple-500/20 text-purple-400 border-purple-500/30';
    default: return 'bg-dark-500/20 text-dark-400 border-dark-500/30';
  }
}
---

<BaseLayout title="Changelog | Skillsmith" description="Skillsmith release notes and version history. See what's new, changed, and fixed in each release.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-white mb-4">Changelog</h1>
      <p class="text-dark-300 text-lg">
        All notable changes to Skillsmith are documented here. We follow
        <a href="https://semver.org" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:text-primary-300">Semantic Versioning</a>.
      </p>
    </div>

    <!-- Legend -->
    <div class="bg-dark-900 border border-dark-700 rounded-lg p-4 mb-12">
      <p class="text-sm text-dark-400 mb-3">Change types:</p>
      <div class="flex flex-wrap gap-2">
        <span class="px-2 py-1 text-xs font-medium rounded border bg-green-500/20 text-green-400 border-green-500/30">Added</span>
        <span class="px-2 py-1 text-xs font-medium rounded border bg-blue-500/20 text-blue-400 border-blue-500/30">Changed</span>
        <span class="px-2 py-1 text-xs font-medium rounded border bg-yellow-500/20 text-yellow-400 border-yellow-500/30">Fixed</span>
        <span class="px-2 py-1 text-xs font-medium rounded border bg-orange-500/20 text-orange-400 border-orange-500/30">Deprecated</span>
        <span class="px-2 py-1 text-xs font-medium rounded border bg-red-500/20 text-red-400 border-red-500/30">Removed</span>
        <span class="px-2 py-1 text-xs font-medium rounded border bg-purple-500/20 text-purple-400 border-purple-500/30">Security</span>
      </div>
    </div>

    <!-- Changelog Entries -->
    <div class="space-y-12">
      {changelog.map((entry, index) => (
        <article class="relative">
          {/* Timeline connector */}
          {index < changelog.length - 1 && (
            <div class="absolute left-[11px] top-12 bottom-0 w-0.5 bg-dark-700 -mb-12"></div>
          )}

          {/* Version Header */}
          <div class="flex items-start gap-4 mb-6">
            <div class="w-6 h-6 rounded-full bg-primary-500 flex items-center justify-center flex-shrink-0 mt-1">
              <div class="w-2 h-2 rounded-full bg-white"></div>
            </div>
            <div class="flex-1">
              <div class="flex flex-wrap items-center gap-3 mb-1">
                <h2 class="text-2xl font-bold text-white">v{entry.version}</h2>
                {index === 0 && (
                  <span class="px-2 py-0.5 text-xs font-medium rounded bg-primary-500/20 text-primary-400 border border-primary-500/30">
                    Latest
                  </span>
                )}
              </div>
              <div class="flex flex-wrap items-center gap-3 text-sm">
                <time class="text-dark-400">{entry.date}</time>
                {entry.title && (
                  <>
                    <span class="text-dark-600">â€¢</span>
                    <span class="text-dark-300">{entry.title}</span>
                  </>
                )}
              </div>
            </div>
          </div>

          {/* Changes */}
          <div class="ml-10 space-y-6">
            {/* Added */}
            {entry.added && entry.added.length > 0 && (
              <div>
                <h3 class="flex items-center gap-2 text-sm font-semibold mb-3">
                  <span class={`px-2 py-0.5 rounded border ${getBadgeClass('added')}`}>Added</span>
                </h3>
                <ul class="space-y-2">
                  {entry.added.map((item) => (
                    <li class="flex items-start gap-2 text-dark-300">
                      <svg class="w-4 h-4 text-green-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {/* Changed */}
            {entry.changed && entry.changed.length > 0 && (
              <div>
                <h3 class="flex items-center gap-2 text-sm font-semibold mb-3">
                  <span class={`px-2 py-0.5 rounded border ${getBadgeClass('changed')}`}>Changed</span>
                </h3>
                <ul class="space-y-2">
                  {entry.changed.map((item) => (
                    <li class="flex items-start gap-2 text-dark-300">
                      <svg class="w-4 h-4 text-blue-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {/* Fixed */}
            {entry.fixed && entry.fixed.length > 0 && (
              <div>
                <h3 class="flex items-center gap-2 text-sm font-semibold mb-3">
                  <span class={`px-2 py-0.5 rounded border ${getBadgeClass('fixed')}`}>Fixed</span>
                </h3>
                <ul class="space-y-2">
                  {entry.fixed.map((item) => (
                    <li class="flex items-start gap-2 text-dark-300">
                      <svg class="w-4 h-4 text-yellow-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {/* Deprecated */}
            {entry.deprecated && entry.deprecated.length > 0 && (
              <div>
                <h3 class="flex items-center gap-2 text-sm font-semibold mb-3">
                  <span class={`px-2 py-0.5 rounded border ${getBadgeClass('deprecated')}`}>Deprecated</span>
                </h3>
                <ul class="space-y-2">
                  {entry.deprecated.map((item) => (
                    <li class="flex items-start gap-2 text-dark-300">
                      <svg class="w-4 h-4 text-orange-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {/* Removed */}
            {entry.removed && entry.removed.length > 0 && (
              <div>
                <h3 class="flex items-center gap-2 text-sm font-semibold mb-3">
                  <span class={`px-2 py-0.5 rounded border ${getBadgeClass('removed')}`}>Removed</span>
                </h3>
                <ul class="space-y-2">
                  {entry.removed.map((item) => (
                    <li class="flex items-start gap-2 text-dark-300">
                      <svg class="w-4 h-4 text-red-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {/* Security */}
            {entry.security && entry.security.length > 0 && (
              <div>
                <h3 class="flex items-center gap-2 text-sm font-semibold mb-3">
                  <span class={`px-2 py-0.5 rounded border ${getBadgeClass('security')}`}>Security</span>
                </h3>
                <ul class="space-y-2">
                  {entry.security.map((item) => (
                    <li class="flex items-start gap-2 text-dark-300">
                      <svg class="w-4 h-4 text-purple-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </article>
      ))}
    </div>

    <!-- Subscribe Section -->
    <div class="mt-16 bg-gradient-to-r from-primary-900/30 to-purple-900/30 border border-primary-700/50 rounded-xl p-8 text-center">
      <h2 class="text-xl font-bold text-white mb-2">Stay Updated</h2>
      <p class="text-dark-300 mb-6">
        Get notified about new releases and important updates.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center max-w-md mx-auto">
        <a
          href="https://github.com/smith-horn/skillsmith/releases"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-dark-800 border border-dark-600 rounded-lg text-white hover:bg-dark-700 hover:border-dark-500 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.115 2.504.337 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
          </svg>
          Watch on GitHub
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contact Us
        </a>
      </div>
    </div>

    <!-- Links -->
    <div class="mt-12 flex flex-wrap justify-center gap-6 text-sm">
      <a
        href="https://github.com/smith-horn/skillsmith/releases"
        target="_blank"
        rel="noopener noreferrer"
        class="text-dark-400 hover:text-primary-400 transition-colors inline-flex items-center gap-1"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.115 2.504.337 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
        </svg>
        GitHub Releases
      </a>
      <a
        href="https://github.com/smith-horn/skillsmith/blob/main/CHANGELOG.md"
        target="_blank"
        rel="noopener noreferrer"
        class="text-dark-400 hover:text-primary-400 transition-colors inline-flex items-center gap-1"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Full CHANGELOG.md
      </a>
      <a
        href="/docs"
        class="text-dark-400 hover:text-primary-400 transition-colors inline-flex items-center gap-1"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        Documentation
      </a>
    </div>
  </div>
</BaseLayout>
