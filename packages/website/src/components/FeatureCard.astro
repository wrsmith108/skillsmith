---
import Card from './Card.astro';

interface Props {
  title: string;
  description: string;
  icon?: string;
  iconColor?: 'purple' | 'blue' | 'green' | 'yellow' | 'red';
  href?: string;
  class?: string;
}

const {
  title,
  description,
  icon,
  iconColor = 'purple',
  href,
  class: className = '',
} = Astro.props;

const iconColorStyles = {
  purple: 'from-[#E07A5F] to-[#D4694E]',
  blue: 'from-[#E07A5F] to-[#D4694E]',
  green: 'from-green-500 to-green-600',
  yellow: 'from-yellow-500 to-yellow-600',
  red: 'from-red-500 to-red-600',
};

const defaultIcons: Record<string, string> = {
  search: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  install: 'M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4',
  security: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  speed: 'M13 10V3L4 14h7v7l9-11h-7z',
  community: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  verified: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z',
  analytics: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
  api: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
};

const iconPath = icon || defaultIcons.search;
---

<Card variant="bordered" hover={!!href} class={className}>
  {href ? (
    <a href={href} class="block">
      <div class={`w-12 h-12 rounded-lg bg-gradient-to-br ${iconColorStyles[iconColor]} flex items-center justify-center mb-4`}>
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath} />
        </svg>
      </div>

      <h3 class="text-lg font-semibold text-white mb-2">{title}</h3>
      <p class="text-gray-400 text-sm">{description}</p>

      <div class="mt-4 inline-flex items-center text-[#E07A5F] text-sm font-medium">
        Learn more
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </a>
  ) : (
    <Fragment>
      <div class={`w-12 h-12 rounded-lg bg-gradient-to-br ${iconColorStyles[iconColor]} flex items-center justify-center mb-4`}>
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath} />
        </svg>
      </div>

      <h3 class="text-lg font-semibold text-white mb-2">{title}</h3>
      <p class="text-gray-400 text-sm">{description}</p>
    </Fragment>
  )}
</Card>
