---
import Badge, { type TrustTier } from './Badge.astro';
import Card from './Card.astro';

interface Props {
  name: string;
  author: string;
  description: string;
  trustTier: TrustTier;
  downloads?: number;
  score?: number;
  categories?: string[];
  href?: string;
  class?: string;
}

const {
  name,
  author,
  description,
  trustTier,
  downloads = 0,
  score,
  categories = [],
  href,
  class: className = '',
} = Astro.props;

const formatDownloads = (num: number): string => {
  if (num >= 1000000) return `${(num / 1000000).toFixed(1)}M`;
  if (num >= 1000) return `${(num / 1000).toFixed(1)}K`;
  return num.toString();
};
---

<Card variant="bordered" hover={!!href} class={className}>
  {href ? (
    <a href={href} class="block">
      <div class="flex items-start justify-between mb-3">
        <div class="flex-1 min-w-0">
          <div class="flex items-center space-x-2 mb-1">
            <h3 class="text-lg font-semibold text-white truncate">{name}</h3>
            <Badge tier={trustTier} size="sm" />
          </div>
          <p class="text-sm text-gray-400">{author}/{name}</p>
        </div>
        {score !== undefined && (
          <div class="flex items-center space-x-1 text-yellow-400">
            <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span class="text-sm font-medium">{score}</span>
          </div>
        )}
      </div>

      <p class="text-gray-300 text-sm mb-4 line-clamp-2">{description}</p>

      <div class="flex items-center justify-between">
        <div class="flex flex-wrap gap-1">
          {categories.slice(0, 3).map((category) => (
            <span class="px-2 py-0.5 text-xs bg-gray-700 text-gray-300 rounded">
              {category}
            </span>
          ))}
        </div>
        <div class="flex items-center text-gray-400 text-sm">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          {formatDownloads(downloads)}
        </div>
      </div>
    </a>
  ) : (
    <Fragment>
      <div class="flex items-start justify-between mb-3">
        <div class="flex-1 min-w-0">
          <div class="flex items-center space-x-2 mb-1">
            <h3 class="text-lg font-semibold text-white truncate">{name}</h3>
            <Badge tier={trustTier} size="sm" />
          </div>
          <p class="text-sm text-gray-400">{author}/{name}</p>
        </div>
        {score !== undefined && (
          <div class="flex items-center space-x-1 text-yellow-400">
            <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span class="text-sm font-medium">{score}</span>
          </div>
        )}
      </div>

      <p class="text-gray-300 text-sm mb-4 line-clamp-2">{description}</p>

      <div class="flex items-center justify-between">
        <div class="flex flex-wrap gap-1">
          {categories.slice(0, 3).map((category) => (
            <span class="px-2 py-0.5 text-xs bg-gray-700 text-gray-300 rounded">
              {category}
            </span>
          ))}
        </div>
        <div class="flex items-center text-gray-400 text-sm">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          {formatDownloads(downloads)}
        </div>
      </div>
    </Fragment>
  )}
</Card>
