{
  "name": "@skillsmith/core",
  "version": "0.2.0",
  "description": "Core types and utilities for Skillsmith",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./errors": {
      "types": "./dist/src/errors.d.ts",
      "import": "./dist/src/errors.js"
    },
    "./embeddings": {
      "types": "./dist/src/embeddings/index.d.ts",
      "import": "./dist/src/embeddings/index.js"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build && npm run test",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:security": "vitest run tests/security",
    "benchmark": "npx tsx src/benchmarks/cli.ts",
    "benchmark:search": "npx tsx src/benchmarks/cli.ts --suite search",
    "benchmark:index": "npx tsx src/benchmarks/cli.ts --suite index",
    "benchmark:cache": "npx tsx src/benchmarks/cli.ts --suite cache",
    "benchmark:embedding": "npx tsx src/benchmarks/cli.ts --suite embedding",
    "import:skills": "npx tsx src/scripts/import-to-database.ts"
  },
  "dependencies": {
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.52.1",
    "@opentelemetry/exporter-trace-otlp-http": "0.56.0",
    "@opentelemetry/resources": "1.30.1",
    "@opentelemetry/sdk-node": "0.56.0",
    "@opentelemetry/sdk-trace-base": "1.30.1",
    "@opentelemetry/semantic-conventions": "1.38.0",
    "@xenova/transformers": "2.17.2",
    "better-sqlite3": "11.10.0",
    "lru-cache": "^10.1.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "vitest": "4.0.16"
  },
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/smith-horn-group/skillsmith.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/smith-horn-group/skillsmith#readme",
  "bugs": {
    "url": "https://github.com/smith-horn-group/skillsmith/issues"
  },
  "keywords": [
    "claude",
    "ai",
    "skills",
    "mcp",
    "llm",
    "anthropic"
  ],
  "engines": {
    "node": ">=22.0.0"
  }
}
