{
  "name": "@skillsmith/core",
  "version": "0.1.0",
  "description": "Core types and utilities for Skillsmith",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./errors": {
      "types": "./dist/src/errors.d.ts",
      "import": "./dist/src/errors.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:security": "vitest run tests/security",
    "benchmark": "npx tsx src/benchmarks/cli.ts",
    "benchmark:search": "npx tsx src/benchmarks/cli.ts --suite search",
    "benchmark:index": "npx tsx src/benchmarks/cli.ts --suite index"
  },
  "dependencies": {
    "@xenova/transformers": "2.17.2",
    "better-sqlite3": "11.10.0",
    "lru-cache": "^10.1.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "vitest": "4.0.16"
  },
  "files": [
    "dist"
  ],
  "license": "Apache-2.0"
}
