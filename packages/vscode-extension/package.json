{
  "name": "@skillsmith/vscode-extension",
  "displayName": "Skillsmith",
  "description": "Discover and install Claude Code skills directly in VS Code",
  "version": "0.1.2",
  "publisher": "skillsmith",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "skills",
    "ai",
    "mcp"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "license": "Elastic-2.0",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "skillsmith.searchSkills",
        "title": "Search Skills",
        "category": "Skillsmith",
        "icon": "$(search)"
      },
      {
        "command": "skillsmith.installSkill",
        "title": "Install Skill",
        "category": "Skillsmith",
        "icon": "$(cloud-download)"
      },
      {
        "command": "skillsmith.refreshSkills",
        "title": "Refresh Skills",
        "category": "Skillsmith",
        "icon": "$(refresh)"
      },
      {
        "command": "skillsmith.viewSkillDetails",
        "title": "View Skill Details",
        "category": "Skillsmith"
      },
      {
        "command": "skillsmith.mcpReconnect",
        "title": "Connect/Reconnect to MCP Server",
        "category": "Skillsmith",
        "icon": "$(plug)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "skillsmith",
          "title": "Skillsmith",
          "icon": "resources/skillsmith.svg"
        }
      ]
    },
    "views": {
      "skillsmith": [
        {
          "id": "skillsmith.skillsView",
          "name": "Skills",
          "type": "tree"
        },
        {
          "id": "skillsmith.searchView",
          "name": "Search Results",
          "type": "tree",
          "visibility": "collapsed"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "skillsmith.skillsView",
        "contents": "No skills found.\n[Search Skills](command:skillsmith.searchSkills)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "skillsmith.searchSkills",
          "when": "view == skillsmith.skillsView",
          "group": "navigation"
        },
        {
          "command": "skillsmith.refreshSkills",
          "when": "view == skillsmith.skillsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "skillsmith.installSkill",
          "when": "view == skillsmith.searchView && viewItem == skill",
          "group": "inline"
        },
        {
          "command": "skillsmith.viewSkillDetails",
          "when": "viewItem == skill"
        }
      ]
    },
    "configuration": {
      "title": "Skillsmith",
      "properties": {
        "skillsmith.skillsDirectory": {
          "type": "string",
          "default": "~/.claude/skills",
          "description": "Directory where skills are installed"
        },
        "skillsmith.apiEndpoint": {
          "type": "string",
          "default": "",
          "description": "Custom API endpoint for skill search (leave empty for default)"
        },
        "skillsmith.mcp.serverCommand": {
          "type": "string",
          "default": "npx",
          "description": "Command to run the MCP server"
        },
        "skillsmith.mcp.serverArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "@skillsmith/mcp-server"
          ],
          "description": "Arguments for the MCP server command"
        },
        "skillsmith.mcp.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to MCP server on extension activation"
        },
        "skillsmith.mcp.autoReconnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically reconnect when connection is lost"
        },
        "skillsmith.mcp.connectionTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Connection timeout in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run build -- --watch",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "20.19.30",
    "@types/vscode": "1.108.1",
    "@vscode/vsce": "2.32.0",
    "esbuild": "0.27.2",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
