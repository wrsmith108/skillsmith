{
  "$schema": "https://json.schemastore.org/github-branch-protection-rule.json",
  "_comment": "Source of truth for main branch protection. Apply with: gh api repos/Smith-Horn/skillsmith/branches/main/protection -X PUT --input .github/branch-protection.json",
  "required_status_checks": {
    "strict": true,
    "contexts": [
      "Secret Scan",
      "Classify Changes",
      "Package Validation",
      "Edge Function Validation",
      "Build Docker Image",
      "Lint",
      "Type Check",
      "Security Audit",
      "Standards Compliance",
      "Build",
      "Markdown Lint"
    ]
  },
  "enforce_admins": false,
  "required_pull_request_reviews": null,
  "restrictions": null,
  "allow_force_pushes": false,
  "allow_deletions": false
}
