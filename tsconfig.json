{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/mcp-server" },
    { "path": "./packages/cli" }
  ],
  "files": [],
  "exclude": ["node_modules", "dist"]
}
